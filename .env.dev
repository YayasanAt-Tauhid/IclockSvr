# Environment Configuration for Local Development (Windows)
# Rename this file to .env (remove .dev suffix)

# Django Settings
SECRET_KEY=dev-secret-key-change-in-production-only
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (SQLite for local development)
DB_ENGINE=sqlite
DB_NAME=db.sqlite3
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# Cache Configuration (Dummy for development)
CACHE_BACKEND=dummy
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0

# Security Settings (Relaxed for development)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0

# Application Settings
LANGUAGE_CODE=id-id
TIME_ZONE=Asia/Jakarta
PIN_WIDTH=9

# File Upload Settings
MAX_UPLOAD_SIZE=10485760

# Email Settings (Console backend for development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=25
EMAIL_USE_TLS=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/iclock.log

# CORS (Allow all for local development)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000,http://127.0.0.1:8000
